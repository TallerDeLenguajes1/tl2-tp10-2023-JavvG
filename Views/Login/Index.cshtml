@{
    ViewData["Title"] = "Iniciar sesión";
}

@model tl2_tp10_2023_JavvG.ViewModels.LoginViewModel;

@if(TempData.ContainsKey("ErrorMessage")) 
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-controller="Login" asp-action="Login" method="post" autocomplete="off">
        <div class="form-group">
            <label asp-for="@Model.NombreUsuario"></label>
            <input asp-for="@Model.NombreUsuario" class="form-control" />
            <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span>    
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
    </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }