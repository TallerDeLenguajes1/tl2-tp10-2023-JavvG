@using tl2_tp10_2023_JavvG.ViewModels

@{
    ViewData["Title"] = "Tableros registrados";
}

@model ListarTablerosViewModel

@if(TempData.ContainsKey("ErrorMessage")) 
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="text-center visionOS-card">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">ID Usuario Propietario</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tablero T in Model.Tableros)
                {
                    <tr>
                        <td>@T.Id</td>
                        <td>@T.IdUsuarioPropietario</td>
                        <td>@T.Nombre</td>
                        <td>@T.Descripcion</td>
                        <td>
                            <a class="modificar" asp-controller="Tablero" asp-action="Update" asp-route-idTablero="@T.Id" asp-route-idUsuario="@Model.IdUsuario">Editar</a>
                            <a class="eliminar" asp-controller="Tablero" asp-action="Delete" asp-route-idTablero="@T.Id">Eliminar</a>
                            <a class="verTareas" asp-controller="Tarea" asp-action="ShowTasksOnBoard" asp-route-idTablero="@T.Id" asp-route-idUsuario="@Model.IdUsuario">Ver tareas</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-grid gap-2">
    <a asp-controller="Tablero" asp-action="Create" asp-route-idUsuario="@Model.IdUsuario"><button class="btn btn-primary boton" type="button">Añadir un nuevo tablero </button></a>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }