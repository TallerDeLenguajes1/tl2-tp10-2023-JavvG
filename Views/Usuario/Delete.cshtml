@{
    ViewData["Title"] = "Eliminar usuario";
}

@model Usuario

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <form asp-controller="Usuario" asp-action="DeleteConfirmed" method="post">
        <h2>¿Desea confirmar la eliminación del usuario '@Model.Nombre'?</h2>
        <div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <input hidden asp-for="@Model.Id">
            <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
    
</div>
