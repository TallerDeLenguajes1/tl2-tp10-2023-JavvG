@using tl2_tp10_2023_JavvG.ViewModels

@{
    ViewData["Title"] = "Modificar usuario";
}

@model ModificarUsuarioViewModel

<div class="text-center">
    <form asp-controller="Usuario" asp-action="Update" method="post">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <div class="mb-3">
            <input hidden asp-for="@Model.Id">
            <label for="nombre" class="form-label">Nuevo nombre</label>
            <input asp-for="@Model.Nombre" value="@Model.Nombre" type="text" class="form-control" id="nombre">
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>  
            <label for="password" class="form-label">Nueva contrase√±a</label>
            <input asp-for="@Model.Password" value="@Model.Password" type="text" class="form-control" id="password">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>  
            <label for="rol" class="form-label">Seleccione el nuevo rol</label>
            <select asp-for="@Model.Rol" class="form-control" id="rol" required>
                @foreach (var rol in Enum.GetValues(typeof(Rol)))
                {
                    <option value="@rol">@rol</option>
                }
            </select>
            <span asp-validation-for="@Model.Rol" class="text-danger"></span>  
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }