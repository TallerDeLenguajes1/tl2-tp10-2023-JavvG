@{
    ViewData["Title"] = "Modificar usuario";
}

@model Usuario

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-controller="Usuario" asp-action="Update" method="post">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nuevo nombre</label>
            <input asp-for="@Model.Nombre" value="@Model.Nombre" type="text" class="form-control" id="nombre">
            <input hidden asp-for="@Model.Id">
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>