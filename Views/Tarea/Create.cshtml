@{
    ViewData["Title"] = "Crear tarea";
}

@model Tarea

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-controller="Tarea" asp-action="Create" method="post" autocomplete="off">
        <div class="mb-3">
            <input hidden asp-for = "@Model.IdTablero" value=1>
            <label for="nombre" class="form-label">Nombre</label>
            <input asp-for="@Model.Nombre" type="text" class="form-control" id="nombre" required>
            <label for="descripcion" class="form-label">Descripci√≥n</label>
            <input asp-for="@Model.Descripcion" type="text" class="form-control" id="descripcion" required>
            <label for="color" class="form-label">Color</label>
            <input asp-for="@Model.Color" type="text" class="form-control" id="color" required>
            <input hidden asp-for="@Model.Estado" value=1>
            <input hidden asp-for="@Model.IdUsuarioAsignado" value=Null>
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-controller="Tarea" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>