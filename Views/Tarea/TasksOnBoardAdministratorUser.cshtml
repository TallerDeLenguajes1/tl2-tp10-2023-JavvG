@using tl2_tp10_2023_JavvG.ViewModels

@{
    ViewData["Title"] = "Tareas";
}

@model ListarTareasViewModel

<div class="text-center visionOS-card">
    <h1 class="display-4">Tareas de este tablero</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col" class="short-column">Descripción</th>
                    <th scope="col">Usuario asignado</th>
                    <th scope="col">Color</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tarea T in Model.Tareas)
                {
                    <tr>
                        <td>@T.Nombre</td>
                        <td>@T.Descripcion</td>
                        @if(T.IdUsuarioAsignado != null)
                        {
                            foreach(Usuario user in Model.UsuariosRegistrados)
                            {
                                if(user.Id == T.IdUsuarioAsignado)
                                {
                                    <td>@user.Nombre</td>
                                }
                            }
                        }
                        else
                        {
                            <td>No tiene</td>
                        } 
                        <td style="overflow: hidden;">
                            <div style="background-color: @T.Color; width: 30px; height: 30px; border-radius: 50%;"></div>
                        </td>
                        <td>@T.Estado</td>
                        <td>
                            <a class="modificar" asp-controller="Tarea" asp-action="Update" asp-route-idTarea="@T.Id" asp-route-idUsuario="@Model.IdUsuario">Editar</a>
                            <a class="eliminar" asp-controller="Tarea" asp-action="Delete" asp-route-idTarea="@T.Id">Eliminar</a>
                            <a class="ver" asp-controller="Tarea" asp-action="ShowSingleTask" asp-route-idTarea="@T.Id" asp-route-idUsuario="@Model.IdUsuario">Ver detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-grid gap-2">
    <a asp-controller="Tarea" asp-action="Create" asp-route-idUsuario="@Model.IdUsuario" asp-route-idTablero="@Model.Tareas.First().IdTablero">
        <button class="btn btn-primary boton" type="button">Añadir una nueva tarea </button>
    </a>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }